# Backend Dockerfile for NVIDIA Nemotron Agentic Workflow
# Multi-stage build: separates build dependencies from runtime

# Stage 1: Builder - Install build dependencies and Python packages
FROM python:3.12-slim AS builder

WORKDIR /app

# Install build dependencies (only in builder stage)
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-docker.txt .

# Install Python dependencies to user directory (for easy copying)
RUN pip install --no-cache-dir --user -r requirements-docker.txt

# Stage 2: Runtime - Minimal final image
FROM python:3.12-slim

WORKDIR /app

# Install only runtime dependencies (FFmpeg + libraries)
RUN apt-get update && apt-get install -y \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Copy Python packages from builder stage
COPY --from=builder /root/.local /root/.local

# Copy application files
COPY server.py .
COPY orchestrator_agent.py .
COPY calender_tool.py .
COPY email_tool.py .
COPY attendee_mapping.json .
COPY python-clients python-clients

# Create uploads directory
RUN mkdir -p uploads

# Update PATH for user-installed packages
ENV PATH=/root/.local/bin:$PATH
ENV PYTHONPATH=/root/.local/lib/python3.12/site-packages:$PYTHONPATH

# Expose port
EXPOSE 5000

# Set environment variables
ENV FLASK_APP=server.py
ENV PYTHONUNBUFFERED=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:5000/', timeout=5)" || exit 1

# Start the application
CMD ["python", "server.py"]
